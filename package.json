{
  "name": "angular-karma-test-explorer",
  "displayName": "Angular/Karma Test Explorer",
  "description": "Run your Angular Tests in the Sidebar of Visual Studio Code",
  "icon": "img/test-explorer_icon.png",
  "author": "Patricio Ferraggi <pattferraggi@gmail.com>",
  "publisher": "raagh",
  "version": "0.2.0",
  "preview": true,
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Raagh/angular-karma_test-explorer"
  },
  "bugs": {
    "url": "https://github.com/Raagh/angular-karma_test-explorer/issues"
  },
  "categories": [
    "Other"
  ],
  "jest": {
    "testEnvironment": "node"
  },
  "keywords": [
    "test",
    "testing",
    "angular",
    "angular.js",
    "karma"
  ],
  "main": "out/main.js",
  "scripts": {
    "postinstall": "node ./node_modules/vscode/bin/install",
    "clean": "rimraf out *.vsix",
    "build": "tsc",
    "watch": "tsc -w",
    "rebuild": "npm run clean && npm run build",
    "package": "npx vsce package",
    "publish": "npx vsce publish",
    "test": "jest"
  },
  "dependencies": {
    "cross-spawn": "^6.0.5",
    "express": "^4.16.4",
    "karma": "~4.0.1",
    "request-promise": "^4.2.4",
    "resolve-global": "^0.1.0",
    "socket.io": "2.2.0",
    "socket.io-client": "2.2.0",
    "socket.io-json-parser": "^2.1.0",
    "tslib": "^1.9.3",
    "vscode-test-adapter-api": "^1.6.0",
    "vscode-test-adapter-util": "^0.6.4"
  },
  "devDependencies": {
    "@types/cross-spawn": "^6.0.0",
    "@types/decamelize": "^1.2.0",
    "@types/express": "~4.16.1",
    "@types/jest": "^24.0.9",
    "@types/karma": "^3.0.2",
    "@types/node": "~10.12.26",
    "@types/semver": "~5.5.0",
    "@types/socket.io-client": "^1.4.32",
    "jest": "^24.1.0",
    "ts-jest": "^24.0.0",
    "tslint": "^5.12.1",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.3.3",
    "vsce": "^1.59.0",
    "vscode": "^1.1.33"
  },
  "engines": {
    "vscode": "^1.23.0"
  },
  "extensionDependencies": [
    "hbenl.vscode-test-explorer"
  ],
  "activationEvents": [
    "*"
  ],
  "configuration": {
    "type": "object",
    "title": "Angular/Karma Test Explorer configuration",
    "properties": {
      "angularKarmaTestExplorer.defaultAngularProjectName": {
        "description": "set the default angular project to be tested, if this is is null all projects in the root folder will be loaded",
        "type": "string",
        "scope": "resource"
      },
      "angularKarmaTestExplorer.defaultSocketConnectionPort": {
        "description": "this is the port that will be used to connect Karma with the test explorer",
        "type": "number",
        "scope": "resource"
      }
    },
    "contributes": [
      "hbenl",
      "julianschwuchow"
    ]
  }
}
